<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cys.igation.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/igation_background_jpg">

        <TextView
            android:text="목적지 음성인식 전"
            android:layout_width="209dp"
            android:layout_height="38dp"
            android:id="@+id/textView2"
            android:background="@drawable/square_shape_blue"
            android:textColor="@android:color/background_light"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="17dp"
            android:id="@+id/progressBar2"
            android:progressDrawable="@drawable/progressbar_green"
            android:layout_width="280dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.050000012" />

        <ImageView
            android:layout_width="201dp"
            android:layout_height="76dp"
            app:srcCompat="@drawable/igation_name_only"
            android:id="@+id/imageView3"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:text="목적지를 말씀해주세요!"
            android:layout_width="249dp"
            android:layout_height="44dp"
            android:id="@+id/textView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="72dp"
            android:textSize="18sp"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/square_shape_mint"
            android:elevation="1dp" />

        <Button
            android:layout_height="88dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="296dp"
            android:id="@+id/button"
            android:background="@drawable/setting"
            android:layout_width="88dp" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
